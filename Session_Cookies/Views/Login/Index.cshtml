@model Session_Cookies.Models.Login
@{
    ViewBag.Title = "Index";
}

<h2 class="">Login</h2>
@using (Html.BeginForm("Authentication", "Login"))
{
    @*@Html.ValidationSummary(false)*@
    <b>User Id:</b>
        @Html.TextBoxFor(modal=>modal.UserId, new {@class = "form-control" }) 
        @Html.ValidationMessageFor(modal=>modal.UserId,"", new { @class = "text-danger" })
    <br>
    <b>Password:</b> 
        @Html.PasswordFor(modal => modal.Password, new { @class = "form-control" })
        @Html.ValidationMessageFor(modal => modal.Password, "", new { @class = "text-danger" })
    <br>
    @Html.CheckBoxFor(modal=>modal.IsRemember) <b>Remember my credentials</b>
    <br><br>
    <input type="submit" class="btn btn-default" />
 }
